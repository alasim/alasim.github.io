---
import HorizontalBlogCard from "@components/HorizontalBlogCard.astro";
import { getCollection } from "astro:content";
import HorizontalCard from "../components/HorizontalCard.astro";
import projectsData from "../data/projects.json";
import BaseLayout from "../layouts/BaseLayout.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const last_posts = posts.slice(0, 3);

// Get featured published projects
const featuredProjects = projectsData.projects
  .filter((project) => project.featured && project.status === "published")
  .slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Greetings! ðŸ‘‹</div>
    <div class="text-5xl font-bold">I'm Hasan Al Asim</div>
    <div class="text-3xl py-3 font-bold">
      Software Developer and Entrepreneur
    </div>
    <div class="py-2 flex flex-col space-y-4">
      <p class="text-lg">
        Iâ€™m a Senior Full-Stack Developer with a passion for building scalable
        SaaS platforms, CMS frameworks, and e-commerce solutions from the ground
        up. My expertise spans React, Node.js, Prisma, Postgres, Python, AWS,
        and Linux, with strong experience in system design, DevOps automation,
        and performance optimization.
      </p>
      <p class="text-lg">
        Beyond coding, Iâ€™ve led teams, mentored developers, and built automation
        tools that improve collaboration and deployment workflows. I enjoy
        solving complex technical challenges while turning ideas into impactful,
        user-focused digital products.
      </p>
    </div>
    <div class="mt-8">
      <a
        class="btn btn-primary"
        href="https://www.linkedin.com/in/alasim/"
        target="_blank"
      >
        Let's Connect!</a
      >
      <a href="mailto:alasim.mailg@gmail.com" class="btn btn-outline ml-5">
        Contact</a
      >
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">My latest projects {"</>"}</div>
  </div>

  {
    featuredProjects.map((project, index) => (
      <>
        <HorizontalCard
          title={project.title}
          img={project.image}
          desc={project.description}
          url={project.url}
          badge={project.badge}
        />
        {index < featuredProjects.length - 1 && <div class="divider my-0" />}
      </>
    ))
  }

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalBlogCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
